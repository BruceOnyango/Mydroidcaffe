<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <!-- TODO : update blank fragment layout -->

    <TextView
        android:id="@+id/stores_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/droid_caffe_stores"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/navy_blue"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/rate_our_stores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_our_stores"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/stores_intro"
        android:textColor="@color/css_grey"
        android:textStyle="italic"
        android:textSize="16sp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/droid_caffe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rate_our_stores"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>